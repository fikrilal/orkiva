{
  "name": "orkiva",
  "version": "0.0.0",
  "private": true,
  "description": "MCP that connects AI agent sessions so they can coordinate work on their own.",
  "packageManager": "pnpm@10.6.3",
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "lint": "pnpm -r --parallel lint",
    "lint:fix": "pnpm -r --parallel lint:fix",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "build": "pnpm -r --parallel build",
    "typecheck": "pnpm -r --parallel typecheck",
    "deps:check": "depcruise --config .dependency-cruiser.cjs --output-type err apps packages",
    "test": "pnpm -r --parallel test",
    "dev:auth:bootstrap": "bash infra/scripts/dev-auth-bootstrap.sh",
    "dev:bridge-api": "pnpm --filter @orkiva/bridge-api dev",
    "dev:supervisor-worker": "pnpm --filter @orkiva/supervisor-worker dev",
    "dev:supervisor-worker:fresh": "pnpm --filter @orkiva/supervisor-worker dev:fresh",
    "dev:operator-cli": "pnpm --filter @orkiva/operator-cli dev",
    "dev:queue:reset": "bash infra/scripts/dev-queue-reset.sh",
    "dev:stack:safe": "pnpm run dev:auth:bootstrap && bash infra/scripts/dev-stack-safe.sh",
    "verify": "pnpm run format && pnpm run lint && pnpm run typecheck && pnpm run deps:check && pnpm run test",
    "db:generate": "pnpm --filter @orkiva/db db:generate",
    "db:up": "docker compose -f infra/docker-compose.yml up -d postgres",
    "db:down": "docker compose -f infra/docker-compose.yml down",
    "db:ready": "pnpm --filter @orkiva/db db:ready",
    "db:migrate": "pnpm --filter @orkiva/db db:migrate",
    "db:smoke": "pnpm --filter @orkiva/db db:smoke",
    "db:bootstrap": "pnpm run db:up && pnpm run db:ready && pnpm run db:migrate && pnpm run db:smoke",
    "ops:sli:pilot": "pnpm run build && tsx infra/scripts/pilot-sli-baseline.ts"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8",
    "@eslint/js": "^9.21.0",
    "dependency-cruiser": "^17.2.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.1.1",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.25.0"
  }
}
